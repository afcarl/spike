PREFIX = /Developer/usr/bin/CC     = $(PREFIX)gcc-4.2 -O3 -lmCFLAGS  = -I/Developer/usr/lib/gcc/i686-apple-darwin9/4.2.1/include/
LDFLAGS = -L/Developer/usr/lib/gcc/i686-apple-darwin9/4.2.1/LIBS    = -lgompSpike: main.o utils.o array_utils.o rng.o spike.o read_parameters.o	$(CC) -o Spike $(CFLAGS) $(LDFLAGS) main.o utils.o array_utils.o rng.o spike.o read_parameters.o $(LIBS)main.o: main.c	$(CC) -fopenmp $(CFLAGS) -c $(^) $(LDFLAGS)

utils.o: utils.c	$(CC) -fopenmp $(CFLAGS) -c $(^) $(LDFLAGS)array_utils.o: array_utils.c	$(CC) -fopenmp $(CFLAGS) -c $(^) $(LDFLAGS)rng.o: rng.c	$(CC) -fopenmp $(CFLAGS) -c $(^) $(LDFLAGS)spike.o: spike.c	$(CC) -fopenmp $(CFLAGS) -c $(^) $(LDFLAGS)read_parameters.o: read_parameters.c	$(CC) -fopenmp $(CFLAGS) -c $(^) $(LDFLAGS)clean:	rm -f *.o
